    android:layout_height="200dp"
    android:background="@mipmap/ic_navigation_bg"
    android:gravity="center" android:id="@+id/linearLayout_login">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/wanandroid_logo"
        android:layout_gravity="center"/>

    <TextView
