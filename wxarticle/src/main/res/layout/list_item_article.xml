<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/widget_rect_black_hollow">

    <TextView
        android:id="@+id/txt_article_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:hint="AT"
        android:singleLine="true"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_article_super_chapter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/widget_rect_orange_hollow"
        android:hint="as"
        android:paddingLeft="4dp"
        android:paddingTop="2dp"
        android:paddingRight="4dp"
        android:paddingBottom="2dp"
        app:layout_constraintLeft_toLeftOf="@id/txt_article_name"
        app:layout_constraintTop_toBottomOf="@id/txt_article_name" />

    <TextView
        android:id="@+id/txt_chapter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@drawable/widget_rect_red_hollow"
        android:hint="cN"
        android:paddingLeft="4dp"
        android:paddingTop="2dp"
        android:paddingRight="4dp"
        android:paddingBottom="2dp"
        app:layout_constraintLeft_toRightOf="@id/txt_article_super_chapter_name"
        app:layout_constraintTop_toTopOf="@id/txt_article_super_chapter_name" />

    <TextView
        android:id="@+id/txt_article_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@drawable/widget_rect_blue_hollow"
        android:hint="Au"
        android:paddingLeft="4dp"
        android:paddingTop="2dp"
        android:paddingRight="4dp"
        android:paddingBottom="2dp"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@id/txt_chapter_name"
        app:layout_constraintTop_toTopOf="@id/txt_article_super_chapter_name" />

    <TextView
        android:id="@+id/txt_article_nice_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/widget_rect_gray_solid"
        android:hint="nD"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/txt_article_super_chapter_name"
        app:layout_constraintTop_toBottomOf="@id/txt_article_super_chapter_name" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/ic_favorite_border"
        app:layout_constraintBottom_toBottomOf="@id/txt_article_nice_date"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_article_super_chapter_name" />
</android.support.constraint.ConstraintLayout>